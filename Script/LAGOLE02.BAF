IF
	OnCreation()
	Global("DerilAmbush", "GLOBAL", 1)
THEN
	RESPONSE #100
		Enemy()
END

IF
	Die()
THEN
	RESPONSE #100
		IncrementGlobal("PillarMembersSlain", "GLOBAL", 1)
END

IF
	!Global("DerilAmbush", "GLOBAL", 1)
	NumTimesTalkedTo(0)
	!Allegiance(Myself,ENEMY)
	See([PC])
	Global("DerilDefeated","GLOBAL",1)
THEN
	RESPONSE #100
		Wait(3)
		StartDialogNoSet([PC])
END

